doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(href="https://fonts.googleapis.com/css?family=Lato:300,300i,700", rel="stylesheet")
    link(rel="stylesheet", href="css/style.css")
    link(rel="shortcut icon", type="image/png", href="img/favicon.png")
    title Natours | Exciting tours for adventurous people
  body
    header.header
      nav.nav.nav--tours
        a.nav__el(href="#") All tours
        form.nav__search
          button.nav__search-btn
            svg
              use(xlink:href="img/icons.svg#icon-search")
          input(type="text", placeholder="Search tours", class="nav__search-input")
      .header__logo
        img(src="img/logo-white.png", alt="Natours logo")
      nav.nav.nav--user
        a.nav__el(href="#") My bookings
        a.nav__el
          img(src="img/user.jpg", alt="User photo", class="nav__user-img")
          span Jonas
    main.main
      - var dataArr = [
        { icon: "map-pin", text: "Banff, Canada" },
        { icon: "calendar", text: "April 2021" },
        { icon: "flag", text: "3 stops" },
        { icon: "user", text: "25 people" }
      ]
      each tour in [1, 2, 3, 4, 5, 6]
        .card
          .card__header
            .card__picture
              .card__picture-overlay
              img(src=`img/tour-${tour}-cover.jpg`, alt=`Tour ${tour}`, class="card__picture-img")
            h3.heading-tertirary
              span The Forest Hiker
          .card__details
            h4.card__sub-heading Easy 5-day tour
            p.card__text Breathtaking hike through the Canadian Banff National Park
            each data in dataArr
              .card__data
                svg.card__icon
                  use(xlink:href=`img/icons.svg#icon-${data.icon}`)
                span= data.text
          .card__footer
            p
              span.card__footer-value $297
              span.card__footer-text per person
            p.card__ratings
              span.card__footer-value 4.9
              span.card__footer-text rating (21)
            a.btn.btn--green.btn--small(href="#") Details
    .footer
      .footer__logo
        img(src="img/logo-green.png", alt="Natours logo")
      ul.footer__nav
        each item in ["About us", "Download apps", "Become a guide", "Careers", "Contact"]
          li
            a(href="#")= item
      p.footer__copyright &copy; by Jonas Schmedtmann. All rights reserved.
